package DesktopAppPack;

import java.io.IOException;
import java.io.InputStream;
import java.io.OutputStream;
import java.net.Inet4Address;
import java.net.ServerSocket;
import java.net.Socket;
import java.net.UnknownHostException;
import java.util.Random;

public class main {

	private static int receivePortnum=-1;
	private static Inet4Address myIp;
	public static void main(String[] args) {
		// TODO Auto-generated method stub
		try {
			//gets the LAN address of pc
			myIp=(Inet4Address)Inet4Address.getLocalHost();
			System.out.println(myIp.getHostAddress());
		} catch (UnknownHostException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		}
		new Thread(new Runnable()
				{

					@Override
					public void run() {
						// TODO Auto-generated method stub
						try {
							receive();
						} catch (IOException e) {
							// TODO Auto-generated catch block
							e.printStackTrace();
						}
					}
				}); 
		
		while(receivePortnum==-1) {};
		System.out.println("\nDesktop details:\nip:"+myIp+"\nport:"+receivePortnum);

	}
	
	public static void receive() throws IOException
	{
		Random r1=new Random();
		receivePortnum=r1.nextInt(1000);
		ServerSocket sRec=new ServerSocket(receivePortnum); //Make a server socket with the generated Portnum
		Socket soRec=sRec.accept();	
		InputStream i1=soRec.getInputStream();
		i1.read();
		i1.close();
		soRec.close();
		sRec.close();
		System.out.println("Receive Success");
	}
	
	
	public static void send(String remoteAdd,int remotePortNum) throws UnknownHostException, IOException
	{
		Socket soSend=new Socket(remoteAdd,remotePortNum);
		OutputStream i2=soSend.getOutputStream();
		i2.flush();
		i2.close();
		soSend.close();
	}

}
