package DesktopAppPack;
import java.awt.AWTException;
import java.awt.Canvas;
import java.awt.Graphics;
import java.awt.Image;
import java.awt.Rectangle;
import java.awt.Robot;
import java.awt.Toolkit;
import java.awt.image.BufferedImage;
import java.io.File;

import javax.imageio.ImageIO;
import javax.swing.JFrame;


public class display {
	public static void main(String[] args)
	{
		MyCanvas ca;
		try {
			ca=new MyCanvas();
			Robot captureRobot=new Robot();
			Rectangle captureArea=new Rectangle(Toolkit.getDefaultToolkit().getScreenSize());
		    BufferedImage Image = captureRobot.createScreenCapture(captureArea);
            ImageIO.write(Image, "jpg", new File("testImage")); 
            
		} catch (Exception e) {
			e.printStackTrace();
		}
	}

}

class MyCanvas extends Canvas{  
    
    public void paint(Graphics g) {  
  
        Toolkit t=Toolkit.getDefaultToolkit();  
        Image i=t.getImage("testImage.gif");  
        g.drawImage(i, 120,100,this);  
          
    }  
        public static void main(String[] args) {  
        MyCanvas m=new MyCanvas();  
        JFrame f=new JFrame();  
        f.add(m);  
        f.setSize(400,400);  
        f.setVisible(true);  
    }  
  
}  
